# UAE Real State Hub - Production Environment Variables
# Copy this file to .env and update the values for your VPS

# MongoDB Configuration
MONGO_USER=admin
MONGO_PASSWORD=your_secure_password_here
MONGODB_URI=mongodb://admin:your_secure_password_here@mongodb:27017/propertieshub?authSource=admin

# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET=your_base64_encoded_jwt_secret_here

# Application Settings
SPRING_PROFILES_ACTIVE=prod

# Optional: External MongoDB (if not using container)
# MONGODB_URI=mongodb://admin:password@your-external-mongo-host:27017/propertieshub?authSource=admin

